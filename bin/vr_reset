#!/bin/csh -fb
set db = /tmp/rough-fog.json
set ln = /var/lib/age-at-home/rough-fog

if (! -s "$db") then
    curl -s -q -L "538e7925-b7f5-478b-bf75-2f292dcf642a-bluemix.cloudant.com/rough-fog/_changes?include_docs=true" >! "$db"
endif

if (-d "$1") then
  set dir = "$1"
  foreach i ( `find "$dir/" -name "*.jpg" -print`  )
    set j = "$i:t:r"
    set r = ( `jq -c '.results[]|select(.doc._id=="'"$j"'").doc.alchemy|.text,.score' "$db" | sed 's/"//g'` )
    echo "$i" "$r"
    if ($#r > 0) then
        if (-e "$ln/$r[1]/$i:t") then
	  ls -al "$ln/$r[1]/$i:t"
	endif
        mkdir -p "$ln/$r[1]/"
        mv "$i" "$ln/$r[1]/"
    else
        mv "$i" "$ln/notfound/"
    endif
  end
else
  echo "$1 not a directory"
endif
